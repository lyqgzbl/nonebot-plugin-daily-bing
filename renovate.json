{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "mergeConfidence:all-badges",
    "config:recommended",
    ":semanticCommits",
    ":automergeMinor",
    ":automergePr",
    ":disableRateLimiting"
  ],
  "prCreation": "immediate",
  "enabledManagers": ["pep621"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchPackageNames": [
        "nonebot2",
        "nonebot-plugin-argot",
        "nonebot-plugin-alconna",
        "nonebot-plugin-localstore",
        "nonebot-plugin-htmlrender",
        "nonebot-plugin-apscheduler",
        "nonebot-plugin-daily-bing"
      ],
      "groupName": "NoneBot Plugins",
      "automerge": true,
      "matchUpdateTypes": ["patch", "minor"],
      "postUpgradeTasks": {
        "commands": ["uv lock"],
        "fileFilters": ["pyproject.toml"]
      }
    },
    {
      "matchPackageNames": ["aiofiles", "httpx"],
      "groupName": "Base Python Libraries",
      "automerge": true,
      "matchUpdateTypes": ["patch", "minor"],
      "postUpgradeTasks": {
        "commands": ["uv lock"],
        "fileFilters": ["pyproject.toml"]
      }
    },
    {
      "matchPackageNames": ["ruff"],
      "groupName": "Development Dependencies",
      "automerge": true,
      "matchUpdateTypes": ["patch", "minor"],
      "postUpgradeTasks": {
        "commands": ["uv lock"],
        "fileFilters": ["pyproject.toml"]
      }
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "automerge": true
    }
  ]
}